{
  "extends": "@tooling/typescript-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "incremental": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler"
  },
  "include": ["*.ts", "src"],
  "exclude": ["node_modules"]
}
